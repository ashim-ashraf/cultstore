			<!-- Logo moblie -->		
			<div class="logo-mobile">
				<a href="/"><img src="/user/images/icons/logo-01.png" alt="IMG-LOGO"></a>
			</div>

			<!-- Icon header -->
			<div class="wrap-icon-header flex-w flex-r-m m-r-15">
				{{#if user}}
				<div class="wrap-icon-header flex-w flex-r-m h-full">	
						<div class="dropdown">
							<button class="btn btn-secondary dropdown-toggle" style="background-color: transparent; text-transform: uppercase ;border: transparent; color: rgb(0, 0, 0);" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
								  <img class="rounded-circle me-lg-2" src="admin/img/user.jpg" alt="" style="width: 40px; height: 40px;">
                            <span class="d-none d-lg-inline-flex"><p>{{user.name}}</p></span>
							</button>
							<div class="dropdown-menu" aria-labelledby="dropdownMenu2">
								<a href="/profile" class="dropdown-item">My Profile</a>
								<a href="/orders" class="dropdown-item">My Orders</a>
                            	<a href="/logout" class="dropdown-item">Log Out</a>
							</div>
							</div>
                    </div>
				<div id="" class="icon-header-item cl2 hov-cl1 trans-04 p-r-11 p-l-10 icon-header-noti js-show-cart cartBadge" data-notify="">
