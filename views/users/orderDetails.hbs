<script> function changeOrderStatus(orderId,productId,status){
    swal({
  title: "Are you sure?",
  icon: "warning",
  buttons: true,
  dangerMode: true,
})
.then((willDelete) => {
  if (willDelete) {
    $.ajax({
		url:'/changeOrderProductStatus',
		data:{
			orderId:orderId,
            productId: productId,
            status : status
		},
		method:'post',
		success:(response) => {
                 swal("Order has been Cancelled", {
                    icon: "success",
                });
				$("#orderItems").load(window.location.href + " #orderItems");
		}
	})
  } else {
    swal("Hurray !! Your Order is active");
  }
});	
}
</script>

