<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <title>Login Form</title>
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
</head>
<body>

<section class="vh-100 bg-image"
  style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img7.webp');">
  <div class="mask d-flex align-items-center gradient-custom-3 " style="height: 100vh;">
    <div class="container p-5">
      <div class="row d-flex justify-content-center align-items-center ">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6 ">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Login</h2>


                <form method="post" action="/otpSubmit" onsubmit=" return validateForm()">


                <div class="form-outline mb-4">
                  <input type="phone" name="code" placeholder="6 digit code" id="form3Example3cg" class="form-control form-control-lg" />
                  <label class="form-label" for="form3Example3cg">Enter OTP</label>
                </div>

                {{#if error}}
                      
                        <p class="error">{{error}}</p>
                      
                {{/if}}

                <div class="d-flex justify-content-center">
                  <button type="submit" class="btn btn-info btn-block  btn-lg gradient-custom-4 text-body">Submit</button>
                </div>

                <div class="d-flex align-items-center justify-content-center  pt-4">
                    <p class="mb-0 me-2">Don't have an account?</p>
                    <a type="button" class="btn btn-outline-danger ml-5" href="/signUp" >Create new</a>
                  </div>
                    
              </form>


            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script src="validation/login.js"></script>
</body>
</html>


