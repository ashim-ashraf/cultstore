    <script src="user/javascripts/jquery.zoom.js"></script>
    <script>
      $(document).ready(function(){ $('img') .wrap('<span
      style="display:inline-block"></span>') .css('display', 'block') .parent()
      .zoom({magnify:2}); $('#footer').trigger('zoom.destroy'); });
